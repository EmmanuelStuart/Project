

<h2> ===Recently updated===</h2>

<% if @productsRecentlyUpdated.present? %>
<div class="container-fluid">
    <div class="row">
    <% @productsRecentlyUpdated.each do |x| %>
        <div class="col-xs-6 col-sm-4 eachProduct">
          <% if x.image.present?  %>
          <div id ="pictureHolder">
            <%= link_to displayProduct_path(number: x.id) do %>
              <p><%= image_tag x.image.url , height: '100', width: '100'%></p>
            <% end %>
          </div>
          <% end %>

          <div id ="titleHolder">
            <h5><%= x.productName %></h5>
          </div>
          <p><%= x.mfr %></p>
          <p>Created at : <%= x.created_at %></p>
          <p>Updated at : <%= x.updated_at %></p>
          <p><%= link_to 'Show details', displayProduct_path(number: x.id) %></p>
          <br />
        </div>
    <% end %>
  </div>
</div>

<% else %>
    <h2> No ecently updated products </h2>
<% end %>

