
<h1>Products</h1>

<% @products.each do |x| %>
  <div id = "products">
    <p><%= x.productName %></p>
    <p><%= x.productInfo %></p>
    <p><%= x.mfr %></p>
    <p><%= x.price %></p>
    <p><%= x.quantity %></p>

    <p><%= link_to 'Show details', displayProduct_path(number: x.id) %></p>
    <br />
  </div>
<% end %>
