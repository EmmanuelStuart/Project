<header>
  <h1> This is my website</h1>


  <nav>
    <ul>
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Products", products_path %></li>

      <div class="dropdown">
        <li class="">Category</li>
        <div class="dropdown-content">

          <%= form_tag(products_path, :method => "get", id: "search-form") do %>
            <%= select_tag(:category_ids, options_from_collection_for_select(Category.all, :id, :name)) %>
            <%= submit_tag 'Submit', name: nil %>
          <% end %>

        </div>
      </div>

      <li><%= link_to "Recently Updated Items", displayRecentlyUpdated_path %></li>
      <li><%= link_to "About", about_path %></li>
      <li><%= link_to "Contact", contact_path %></li>
    </ul>
  </nav>



  <div id="productSearch">


    <%= form_tag(products_path, :method => "get", id: "search-form") do %>
      <%= select_tag(:category_id, content_tag(:option, 'All Products', :value=>"all") + options_from_collection_for_select(Category.all, :id, :name)) %>
      <%= text_field_tag :search, params[:search], placeholder: "Search anything" %>
      <%= submit_tag 'Search', productName: nil %>
    <% end %>

  </div>
</header>
